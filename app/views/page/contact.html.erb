<h1>Email</h1>
<h3>To: <small><%= @user.name %>, <%= @user.email %></small></h3>
<form action="/sendemail/<%=@user.id%>" method="get">
  <div class="form-group">
    <label for="subject">Subject</label>
    <input type="text" name="subject" id="subject"/>
  </div>
  <div class="form-group">
    <label for="message">Message</label>
    <textarea rows="10" width="100%" name="message" id="message" class="materialize-textarea"></textarea>
  </div>
  <input type='submit' class="waves-effect waves-light btn"/>
</form>
